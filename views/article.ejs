<%- await render("include/menu.ejs") %>

<% const article = posts.slug(location.pathname.split("/")[2]) %>

<div>

	<% if (article.fields.thumbnail) { %>
	
		<div style="background-image: url('<%- url(article.fields.thumbnail) %>'); background-position: center; width: 100%; height: 400px; background-repeat: no-repeat;"></div>
	
	<% } %>

	<div id="article_content" class="section">

		<h3><%- article.fields.authors %> - <%- article.fields.release_date %></h3>
		<h1><%- article.fields.title %></h1>
		<h2><%- article.fields.subtitle %></h2>

		<div id="article_body">

			<%- article.fields.content %>

		</div>

	</div>

</div>
